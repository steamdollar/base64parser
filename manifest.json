{
  "manifest_version": 3,
  "name": "Context Decoder",
  "version": "1.2",
  "description": "A powerful toolkit for Base64 encoding/decoding and HTTP API requests.",
  "permissions": [
    "contextMenus", 
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]      
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {      
      "48": "images/icon48.png"
    }
  },
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "decode-base64": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Decode Base64"
    }
  }
}